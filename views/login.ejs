  </form>

  <label for="switch-options">Themes:</label>
  <select id="switch-options">
    <option value="switch-options__light" data-stylesheet="/Public/Css/light.css">Light</option>
    <option value="switch-options__dark" data-stylesheet="/Public/Css/dark.css">Dark</option>
  </select>
  </div><br><br>

  <button id="clear-storage">Clear Storage</button>
  
  <script src="/Public/JavaScript/switchThemes.js"></script>

